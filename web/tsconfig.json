{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "skipLibCheck": true,
        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "noUnusedLocals": false,
        "jsx": "react-jsx",
        /* Linting */
        "strict": false,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "checkJs": false,
        "noImplicitAny": false,
        "strictNullChecks": false,
        "typeRoots":  ["node_modules/@types", "node_modules/@priolo/jon/dist"],
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
    },
    "include": [
        "src",
        "node_modules/@priolo/jon/dist/**/*",
    ],
    "exclude": ["node_modules"],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}